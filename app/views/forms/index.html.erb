<div class="container" style="margin-top:40px;">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col text-left"><h2>Öğrenci Ölçekleri</h2> (Toplam: <%= @forms.count %>)</div>
    <div class="col text-right"><%= link_to ".CSV indir", forms_path(format: "csv"), class: "btn btn-success" %>&nbsp;&nbsp;&nbsp;<%= link_to "Excel indir", forms_path(format: "xls"), class: "btn btn-success" %></div>
  </div>
  <div style="padding:10px;"></div>
  <a href="?q=t" class="btn btn-success">Tamamlanan ölçekler</a>
  <a href="?q=f" class="btn btn-danger">Bekleyen ölçekler</a>
  <div class="row" style="margin-top:20px;">
    <table class="table-bordered">
  <%
    if @filled.present?
       @filled.each do |fill| %>
            <tr>
              <td><%= fill.name %></td>
              <td><%= fill.surname %></td>
            </tr>
      <% end
    else
      @waiting.each do |wait| %>
           <tr>
             <td><%= wait.name %></td>
             <td><%= wait.surname %></td>
           </tr>
     <% end
    end
  %>
    </table>
  </div>

</div>
