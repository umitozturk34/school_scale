<div class="border-form-div">
  <h2>Kayıt Ol</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email adresi' %>
    <%= f.text_field :name, :placeholder => 'Okul ismi' %>
    <%= f.password_field :password, :placeholder => 'Şifre' %>
    <%= f.password_field :password_confirmation, :placeholder => 'Şifreyi doğrula' %>
    <%= f.submit "Kayıt ol",:class=>'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
